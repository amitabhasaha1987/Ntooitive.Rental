@model List<Repositories.Models.Admin.User.User>
@{
    Layout = null;
}
<table class="table table-bordered table-hover dataTable">
    <tr>
        <th>Agent #</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Manage</th>
        <th>Edit</th>
        <th>Delete</th>


    </tr>

    @if (Model.Count > 0)
    {
        foreach (var item in Model)
         {

             <tr>
                 <td>@item.ParticipantId</td>
                 <td>@item.FirstName</td>
                 <td>@item.LastName</td>
                 <td>@item.Email</td>
                 <td>@item.PrimaryContactPhone</td>
                 <td>
                     <a class="btn btn-block btn-primary" onclick="ManageUser('@item.ParticipantId');">Manage</a>
                 </td>
                 <td>
                     <a class="btn btn-block btn-primary" onclick="EditUser('@item.ParticipantId');">Edit</a>
                 </td>
                 <td>
                     <a class="btn btn-block btn-primary" onclick="DeleteUser('@item.ParticipantId');">Delete</a>
                 </td>
             </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="8" align="center"> No agents found.</td>
        </tr>
            }
</table>

<script type="text/javascript">
    function ManagePlan(mlsid) {
        window.location.href = "/property/newhome/editplan/" + mlsid;
    }

    function ManageUser(uniqueid) {
        window.location.href = "/agent/manage/" + uniqueid+"/Office";
    }

    function EditUser(uniqueid) {
        window.location.href = "/agent/new-agent?agentId=" + uniqueid;
    }

    function DeleteUser(uniqueid) {
        window.location.href = "/agent/new-agent?agentId=" + uniqueid;
    }
</script>

