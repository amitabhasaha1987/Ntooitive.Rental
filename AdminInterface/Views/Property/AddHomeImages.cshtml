    </script>

    <script type="text/javascript">
        (function ($) {
            $('#btnImageUpload').on('click', function () {
                debugger;
                var imageLst = new Array();
                $('#tblImage .name ').each(function () {
                    var a = $(this).find("span").html();
                    var photo = {};
                    photo.MediaURL = a;
                    imageLst.push(photo);
                });
                console.log(imageLst);
                debugger;
                var uniqueId = $('#btnImageUpload').data("uniqueid2");
